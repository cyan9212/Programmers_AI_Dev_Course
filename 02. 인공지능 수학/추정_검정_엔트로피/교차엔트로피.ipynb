        "import numpy as np"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def cross_entropy(P, Q):\n",
        "  return sum([-P[i]*np.log2(Q[i]) for i in range(len(P))])\n",
        "\n",
        "P = [1,0]\n",
        "Q = [0.8, 0.2]\n",
        "print(cross_entropy(P, Q))\n",
        "Q = [0.5, 0.5]\n",
        "print(cross_entropy(P, Q))\n",
        "Q = [0.2, 0.8]\n",
        "print(cross_entropy(P, Q))"
      ],
